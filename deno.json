{
  "tasks": {
    "start": "deno run --env-file=.env -E=PORT,ENV -N -RW -S='networkInterfaces' ./src/main.ts",
    "dev": "deno run --env-file=.env -A --inspect --watch ./src/main.ts",
    "compile:win": "ENV=\"production\" deno compile --env-file=.env -E=PORT,ENV -N -RW -S='networkInterfaces' --target x86_64-pc-windows-msvc --include ./public --output ./assets/shario.exe ./src/main.ts",
    "compile:mac": "ENV=\"production\" deno compile --env-file=.env -E=PORT,ENV -N -RW -S='networkInterfaces' --target x86_64-apple-darwin --include ./public --output ./assets/shario.sh ./src/main.ts",
    "compile:mac-arm": "ENV=\"production\" deno compile --env-file=.env -E=PORT,ENV -N -RW -S='networkInterfaces' --target aarch64-apple-darwin--include ./public --output ./assets/shario.sh ./src/main.ts",
    "compile:linux": "ENV=\"production\" deno compile --env-file=.env -E=PORT,ENV -N -RW -S='networkInterfaces' --target x86_64-unknown-linux-gnu--include ./public --output ./assets/shario.sh ./src/main.ts",
    "compile:linux-arm": "ENV=\"production\" deno compile --env-file=.env -E=PORT,ENV -N -RW -S='networkInterfaces' --target aarch64-unknown-linux-gnu--include ./public --output ./assets/shario.sh ./src/main.ts",
    "format": "deno fmt && deno lint"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@sigmasd/qrpng": "jsr:@sigmasd/qrpng@^0.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.11",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "lint": {
    "include": [
      "./src",
      "./public"
    ]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "proseWrap": "always",
    "singleQuote": true,
    "useTabs": false
  },
  "exclude": [
    "./assets",
    "./.idea",
    "./dist",
    "./node_modules",
    "./files",
    "./qrcodes",
    "./public/main.min.css"
  ],
  "lock": {
    "path": "./deno.lock",
    "frozen": false
  }
}
